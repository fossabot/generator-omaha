{
  "name": "<%= projectName %>",
  "version": "1.0.0",
  "author": "<%= userName %>",
  "license": "MIT",
  "description": "Slightly opinionated boilerplate and workflow for creating web applications",
  "keywords": [
    "webplate",
    "MVC",
    "MarionetteJS",
    "JavaScript",
    "Node",
    "Grunt",
    "Handlebars",
    "Karma",
    "Jasmine"
  ],
  "main": "<%= appDir %>app/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhwohlgemuth/techtonic-webapp.git"
  },
  "jscsConfig": "./config/.jscsrc",
  "engines": {
    "node": "*"
  },<% if (useBrowserify) { %>
  "browserify": {
    "transform": [
      "deamdify",
      "aliasify"
    ]
  },
  "aliasify": {
    "aliases": {
      "app":       "./app/app",
      "router":    "./app/router",
      "templates": "./app/templates"
    },
    "replacements": {
      "models/(\\w+)":      "./app/models/$1",
      "views/(\\w+)":       "./app/views/$1",
      "controllers/(\\w+)": "./app/controllers/$1",
      "modules/(\\w+)":     "./app/modules/$1"
    }
  },<% } %>
  "dependencies": {
    "requirejs": "^2.1.17",
    "jquery": "*",
    "underscore": "^1.8.3",
    "backbone": "^1.2.1",
    "backbone.marionette": "^2.4.2",
    "backbone.radio": "^1.0.1",
    "handlebars": "*",
    "config": "^1.14.0"
  },
  "devDependencies": {<% if (useBrowserify) { %>
    "browserify": "*",
    "grunt-browserify": "*",
    "aliasify": "^1.9.0",
    "deamdify": "^0.2.0",<% } %>
    "autoprefixer": "^6.3.1",
    "cssnano": "^3.4.0",
    "globby": "^4.0.0",
    "grunt": "^0.4.5",<% if (props.useA11y) { %>
    "grunt-a11y": "^0.1.2",
    "grunt-accessibility": "^3.0.2",<% } %><% if (props.benchmarks) { %>
    "grunt-benchmark": "^0.3.0",<% } %><% if(props.useBuddyjs) { %>
    "grunt-buddyjs": "^0.1.2",<% } %>
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^0.7.0",
    "grunt-contrib-copy": "^0.8.0",
    "grunt-contrib-csslint": "^0.5.0",
    "grunt-contrib-handlebars": "*",
    "grunt-contrib-htmlmin": "^0.6.0",<% if (props.compressImages) { %>
    "grunt-contrib-imagemin": "^1.0.0",<% } %>
    "grunt-contrib-jshint": "*",<% if (useLess) { %>
    "grunt-contrib-less": "^1.0.1",<% } %>
    "grunt-contrib-requirejs": "^0.4.4",<% if (useSass) { %>
    "grunt-contrib-sass": "^0.9.2",<% } %>
    "grunt-contrib-uglify": "^0.11.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-express": "^1.4.1",
    "grunt-htmlhint-plus": "*",
    "grunt-jscs": "^1.8.0",
    "grunt-jsdoc": "*",<% if (props.useJsinspect) { %>
    "grunt-jsinspect": "^1.1.0",<% } %>
    "grunt-jsonlint": "^1.0.4",
    "grunt-karma": "^0.12.0",<% if (props.useCoveralls) { %>
    "grunt-karma-coveralls": "^2.5.3",<% } %>
    "grunt-open": "^0.2.3",
    "grunt-parallel": "^0.4.1",
    "grunt-plato": "^1.3.0",
    "grunt-postcss": "*",<% if (useBrowserify) { %>
    "grunt-replace": "^0.11.0",<% } %>
    "jasmine-core": "^2.2.0",
    "jscs-jsdoc": "^1.1.0",
    "jshint": "*",
    "jshint-stylish": "*",<% if (props.useJsinspect) { %>
    "jsinspect": "^0.7.0",<% } %>
    "json-server": "*",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.5.0",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-requirejs": "^0.2.2",
    "karma-spec-reporter": "*",
    "load-grunt-tasks": "^3.1.0",
    "lodash": "^3.10.0",
    "nodemon": "^1.4.0",
    "node-uuid": "*",
    "phantomjs-prebuilt": "^2.1.3",
    "postcss-safe-parser": "^1.0.4",
    "sinon": "^1.15.4",
    "time-grunt": "^1.1.0",
    "ws": "^0.8.0"
  },
  "scripts": {
    "test": "grunt test-ci",
    "lint-comments": "grunt jscs:comments",
    "prestart": "nohup json-server --port 8080 --watch tests/data/db.json &",
    "start": " grunt"
  }
}

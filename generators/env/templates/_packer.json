{
  "variables": {
    "org_name": "techtonic",
    "version": "1.0.3",
    "iso_name": "ubuntu-14.04.3-server-amd64.iso",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
    "checksum": "9e5fecc94b3925bededed0fdca1bd417",
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
    "hostname": "home",
    "update": "yes"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "file=/floppy/preseed.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ user `hostname` }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "passwd/user-fullname={{ user `ssh_name` }} ",
        "passwd/user-password={{ user `ssh_pass` }} ",
        "passwd/user-password-again={{ user `ssh_pass` }} ",
        "passwd/username={{ user `ssh_name` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "boot_wait": "4s",
      "disk_size": 130048,
      "floppy_files": ["http/preseed.cfg"],
      "guest_os_type": "Ubuntu_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{ user `checksum` }}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "iso/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_name` }}",
      "ssh_password": "{{ user `ssh_pass` }}",
      "ssh_wait_timeout": "10m",
      "shutdown_command": "echo '{{ user `ssh_pass` }}'|sudo -S shutdown -P now",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--cpus", "1"],
        ["modifyvm", "{{ .Name }}", "--memory", "512"]
      ],
      "vm_name": "ubuntu-1404-desktop"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "share/functions.sh",
      "destination": "functions.sh"
    },
    {
      "type": "file",
      "source": "share/snippets.cson",
      "destination": "snippets.cson"
    },
    {
      "type": "file",
      "source": "share/setup.sh",
      "destination": "setup.sh"
    },
    {
      "type": "shell",
      "environment_vars": [
        "UPDATE={{ user `update` }}",
        "ORG_NAME={{ user `org_name` }}",
        "SSH_USERNAME={{ user `ssh_name` }}",
        "SSH_PASSWORD={{ user `ssh_pass` }}"
      ],
      "execute_command": "echo '{{ user `ssh_pass` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "scripts/update.sh",
        "scripts/install_software.sh",
        "scripts/install_guest_additions.sh",
        "scripts/configure_sudo.sh",
        "scripts/cleanup.sh"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/install_software_no_sudo.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "box/{{ user `org_name` }}.{{ user `version` }}.box",
        "vagrantfile_template": "Vagrantfile.template",
        "compression_level": 9
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "techtonic/env",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{ user `version` }}"
        }
      }
    ]
  ]
}
